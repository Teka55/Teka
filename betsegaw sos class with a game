        const picker = document.getElementById('sectionPicker');
        const tableBox = document.getElementById('timetableDisplay');

        function initSite() {
            // Fill picker
            for (let key in timetableData) {
                let opt = document.createElement('option');
                opt.value = key; opt.innerText = "Section " + key;
                picker.appendChild(opt);
            }
            renderTimetable();
        }

        function renderTimetable() {
            const data = timetableData[picker.value];
            let html = `<table><thead><tr><th>Day</th>`;
            for (let i = 1; i <= 7; i++) html += `<th>${i}</th>`;
            html += `</tr></thead><tbody>`;

            const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"];
            days.forEach(day => {
                html += `<tr><td style="background:#f1f5f9; font-weight:700;">${day}</td>`;
                const subs = data[day] || [];
                const limit = (day === "Friday") ? 6 : 7;
                for (let i = 0; i < 7; i++) {
                    html += `<td>${subs[i] || '-'}</td>`;
                }
                html += `</tr>`;
            });
            html += `</tbody></table>`;
            tableBox.innerHTML = html;
        }

        picker.onchange = renderTimetable;
        window.onload = initSite;

        /* =========================================
           2. BRAIN GYM LOGIC
           ========================================= */
        function openGame() {
            document.getElementById('gym-modal').style.display = 'flex';
            document.body.classList.add('game-active');
            gym.updateUI();
        }

        function closeGame() {
            document.getElementById('gym-modal').style.display = 'none';
            document.body.classList.remove('game-active');
            clearInterval(gym.timerId);
        }

        const gym = {
            lives: 3, coins: 0, mode: '', answer: '', timerId: null, timeLeft: 0,
            
            start: function(mode) {
                this.mode = mode;
                if(mode === 'memory') {
                    this.showScreen('screen-memory');
                    this.initMemory();
                } else {
                    this.showScreen('screen-play');
                    this.nextTask();
                }
            },

            showScreen: function(id) {
                document.querySelectorAll('.gym-screen').forEach(s => s.classList.remove('active'));
                document.getElementById(id).classList.add('active');
            },

            nextTask: function() {
                if(this.lives <= 0) return this.reset();
                document.getElementById('gym-answer-input').value = '';
                document.getElementById('gym-answer-input').focus();
                
                if(this.mode === 'math') {
                    let n1 = Math.floor(Math.random()*20) + 5;
                    let n2 = Math.floor(Math.random()*15) + 2;
                    this.answer = n1 + n2;
                    document.getElementById('gym-q-text').innerText = `${n1} + ${n2}`;
                } else {
                    const eng = [{q:"Antonym of HARD", a:"SOFT"}, {q:"Plural of CHILD", a:"CHILDREN"}, {q:"Capital of ETHIOPIA", a:"ADDIS ABABA"}];
                    let p = eng[Math.floor(Math.random()*eng.length)];
                    this.answer = p.a;
                    document.getElementById('gym-q-text').innerText = p.q;
                }
                this.startTimer(15);
            },

            checkAnswer: function() {
                let val = document.getElementById('gym-answer-input').value.toUpperCase().trim();
                if(val == this.answer) {
                    this.coins += 15; this.nextTask();
                } else {
                    this.lives--; this.updateUI();
                    if(this.lives <= 0) this.reset(); else this.nextTask();
                }
                this.updateUI();
            },

            startTimer: function(sec) {
                clearInterval(this.timerId);
                let bar = document.getElementById('gym-timer-bar');
                let width = 100;
                this.timerId = setInterval(() => {
                    width -= (100 / (sec * 10));
                    bar.style.width = width + "%";
                    if(width <= 0) {
                        clearInterval(this.timerId);
                        this.lives--; this.updateUI(); this.nextTask();
                    }
                }, 100);
            },

            initMemory: function() {
                const icons = ['üçé','üçé','üöÄ','üöÄ','‚ö°','‚ö°','‚öΩ','‚öΩ','üíé','üíé','üåà','üåà'].sort(() => 0.5 - Math.random());
                const board = document.getElementById('mem-board');
                board.innerHTML = '';
                let flipped = [];
                icons.forEach(icon => {
                    let card = document.createElement('div');
                    card.className = 'gym-card-btn';
                    card.style.fontSize = "2rem";
                    card.onclick = () => {
                        if(card.innerText || flipped.length >= 2) return;
                        card.innerText = icon; card.style.background = "white";
                        flipped.push(card);
                        if(flipped.length === 2) {
                            if(flipped[0].innerText === flipped[1].innerText) {
                                this.coins += 25; flipped = []; this.updateUI();
                            } else {
                                setTimeout(() => {
                                    flipped.forEach(c => { c.innerText = ''; c.style.background = "rgba(255,255,255,0.05)"; });
                                    flipped = [];
                                }, 600);
                            }
                        }
                    };
                    board.appendChild(card);
                });
            },

            toggleShop: function() { this.showScreen('screen-shop'); },
            buy: function(item, cost) {
                if(this.coins >= cost) {
                    this.coins -= cost; if(item === 'life') this.lives++;
                    this.updateUI();
                } else { alert("Not enough coins!"); }
            },

            updateUI: function() {
                document.getElementById('ui-lives').innerText = this.lives;
                document.getElementById('ui-coins').innerText = this.coins;
            },

            goHome: function() { clearInterval(this.timerId); this.showScreen('screen-home'); },

            reset: function() {
                alert("Game Over! Total Coins: " + this.coins);
                this.lives = 3; this.coins = 0; this.updateUI(); this.goHome();
            }
        };

        // Input listener
        document.getElementById('gym-answer-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') gym.checkAnswer(); });
    </script>
</body>
</html>
